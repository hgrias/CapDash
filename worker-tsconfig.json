{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "outDir": "./.workers/src/",
    "baseUrl": "./"
  },
  "include": ["src/workers/**/*.ts"],
  "exclude": ["node_modules"]
}
